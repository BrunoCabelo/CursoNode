<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <br>
        <h3><%= pergunta.titulo %></h3>
        <div class="card">
            <div class="card-body">
        <p><%= pergunta.descricao %></p>
            </div>
        </div>  
        
        <hr>
        <br>
        <form method="POST" action="/responder">
            <label for="">Envie sua resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <br>
        <h3>Respostas:</h3>
        

        <% respostas.forEach((resposta)=>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>   
        <% }) %>
    </div>
    <%- include('partials/footer.ejs') %>
</body>