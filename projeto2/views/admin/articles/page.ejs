<%- include('../../partials/header.ejs'); %>

<body>
    <%- include('../../partials/homenavbar.ejs'); %>
    <div class="container">
        <br><br>
        <div class="jumbotron">
            <h1 class="display-4">GuiaPress</h1>
            <p class="lead">Este blog trata de assuntos de tecnologia e desenvolvimento e traz as principais noticias do mercado</p>
            <hr class="my-4">
            <p>Assine nossa newsLetter para receber novas noticias todos os dias!</p>
            <a class="btn btn-primary " href="#">Assinar</a>
        </div>

        <h1>Artigos:</h1>

        <% result.articles.rows.forEach((article)=>{ %>
            <br>
            <a href="/<%= article.slug %>" style="text-decoration: none;" class=""><div class="card">
                <div class="card-header">
                
                    <h3><%= article.title %></h3>
                    <p><%= article.category.title %></p>
                
                </div>
            </div></a>
        <% }) %>
            <br>

        <div class="row">
            <div class="col col-12">
            <% if(result.page == 2){ %>
                <a href="/" style="float: left;"> Previus </a>
            <% }else if(result.page > 2){ %>
                    <a href="/articles/page/<%= result.page - 1 %>" style="float: left;"> Previus </a>

            <%} if(result.next){ %>
                <a href="/articles/page/<%= result.page + 1 %>" style="float: right;"> Next </a>
            <% } %>
        </div>
        </div>

    </div>
</body>

<%- include('../../partials/footer.ejs'); %>